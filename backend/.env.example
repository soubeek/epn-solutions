# Configuration Django - Backend EPN Solutions
# Copier ce fichier vers .env et adapter à votre configuration

# ==========================================
# ENVIRONNEMENT
# ==========================================
DEBUG=False
DJANGO_ENV=production
DJANGO_SETTINGS_MODULE=config.settings.production

# Générer avec: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=change-me-to-random-very-long-secret-key

# Hosts autorisés (séparés par des virgules)
ALLOWED_HOSTS=localhost,127.0.0.1

# ==========================================
# BASE DE DONNÉES - PostgreSQL
# ==========================================
USE_SQLITE=False
POSTGRES_DB=poste_public
POSTGRES_USER=admin
POSTGRES_PASSWORD=ChangeMe_PostgreSQL_Password!

# Hostname Docker (utiliser 'postgres' dans Docker, 'localhost' en local)
DB_HOST=postgres
DB_PORT=5432

# ==========================================
# REDIS (Cache + Celery Broker)
# ==========================================
USE_REDIS_CACHE=True

# Hostname Docker (utiliser 'redis' dans Docker, 'localhost' en local)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# ==========================================
# CORS
# ==========================================
CORS_ALLOWED_ORIGINS=https://localhost,https://postes.mairie.local

# ==========================================
# JWT (minutes)
# ==========================================
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# ==========================================
# EMAIL (optionnel)
# ==========================================
EMAIL_HOST=smtp.mairie.local
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@mairie.local

# ==========================================
# SENTRY (optionnel - monitoring erreurs)
# ==========================================
# SENTRY_DSN=https://your-sentry-dsn
